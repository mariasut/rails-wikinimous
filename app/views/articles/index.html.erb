<h1>All Articles</h1>

<div class="navbar">
<%= link_to "New article", articles_new_path %>
</div>
<ul>
  <% @articles.each do |article| %>
  <li>
    <h2>
      <%= article.id %>
      <%= link_to article.title, article_path(article) %>
    </h2>
    <p>
      <%= article.content %>
    </p>
    <%= link_to "Delete", article,
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
